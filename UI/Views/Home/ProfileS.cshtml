
@{
    ViewBag.Title = "ProfileS";
}




<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    <title>ZakazOK</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="http://www.sclance.com/pngs/shop-png/shop_png_1237086.png" width="50" height="50" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>



        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")"><h1><b>ZakazOK</b></h1></a>
                </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Все товары</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Boots", "Home")">Кроссовки</a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Bags", "Home")">Рюкзаки</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Hat", "Home")">Кепки</a>
                    </li>
                </ul>
            </div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Выйти</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0"></form>
        </div>
    </nav>
    <p><h3>Statistics</h3></p>
    <table class="table">
        <tr>
            <th>
                Stats
            </th>
        </tr>

        @foreach (var item in ViewBag.Statistic)
        {
            <tr>
                <td>
                    @item.ToString()
                </td>
            </tr>
        }

    </table>
    <table class="table">
        <tr>
            <th>
                Email
            </th>
            <th>
                Parol
            </th>
            <th>

            </th>
            <th>
                Money
            </th>
            <th>

            </th>
        </tr>

        <tr>
            <td>
                @ViewBag.Person.Email
            </td>
            <td>
                @ViewBag.Person.Parol
            </td>
            <td>
                <form action="" method="post">
                    <input type="number" required class="form-control" id="IdTxt" placeholder="Ваш Id" name="Id" value="@ViewBag.Person.Id" hidden>
                    <input type="password" required class="form-control" id="passwordTxt" placeholder="Ваш пароль" name="password">
                    <button type="submit" class="btn btn-primary" value="Id">Edit</button>
                </form>
            </td>
            <td>
                @ViewBag.Person.Money
            </td>
            <td>
                <form action="" method="post">
                    <input class="form-control mr-sm-2" type="number" placeholder="Введите карту"
                           aria-label="Count" name="card">
                    <input type="number" required class="form-control" id="IdTxt" placeholder="Ваш Id" name="Id" value="@ViewBag.Person.Id" hidden>
                    <input class="form-control mr-sm-2" type="number" id="sumTxt" placeholder="Введите сумму"
                           aria-label="Count" name="sum">
                    <button type="submit" class="btn btn-primary" value="Id">Пополнить счёт</button>
                </form>
            </td>
        </tr>


    </table>


</body>
</html>


