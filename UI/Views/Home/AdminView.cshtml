                   aria-label="Type"name="type">
            <input class="form-control mr-sm-2" type="text" placeholder="Название товара"
                   aria-label="Name"name="name">
            <input class="form-control mr-sm-2" type="text" placeholder="Описание товара"
                   aria-label="Description"name="description">
            <input class="form-control mr-sm-2" type="number" placeholder="Стоимость товара"
                   aria-label="Cost"name="cost"value="500">
            <input class="form-control mr-sm-2" type="number" placeholder="Стартовое количество"
                   aria-label="Count"name="scount"value="1">
            <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Добавить</button>
        </form>
    </div>

