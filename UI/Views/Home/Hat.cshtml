
@{
    ViewBag.Title = "Hat";
}
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    <title>ZakazOK</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <a class="navbar-brand" href="@Url.Action("Login", "Home")">
            <img src="http://www.sclance.com/pngs/shop-png/shop_png_1237086.png" width="50" height="50" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")"><h1><b>ZakazOK</b></h1><span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Все товары</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Boots", "Home")">Кроссовки</a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Bags", "Home")">Рюкзаки</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link">Кепки</a>
                    </li>
                </ul>
            </div>
            <form class="form-inline my-2 my-lg-0" action="~/Home/Search" method="get">
                <input class="form-control mr-sm-2" type="search" placeholder="Поиск товаров на сайте" id="searchTxt"
                       aria-label="search" name="search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit" value="search">Найти</button>
            </form>
            <p class="lead">@Html.Raw(@ViewBag.Message) </p>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Home")">Войти</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Registration", "Home")">Зарегистрироваться</a>
                </li>

            </ul>
        </div>

    </nav>

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Наши кепки</h1>
        <p class="lead">Лучшие цены на просторах интеренета.</p>
    </div>
    <table class="table">
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
        <tr>
            <td>
                <div class="container">
                    @foreach (var item in ViewBag.Prod1)
                    {

                        <div class="card mb-4 shadow-sm " style="width: 18rem;">
                            <img src="@item.http" class="card-img-top" alt="..." style="width: 18rem;">
                            <div class="card-header">
                                <h4 class="my-0 font-weight-normal">@item.Name</h4>
                            </div>
                            <div class="card-body">
                                <h2 class="card-title pricing-card-title">
                                    $@item.Cost
                                </h2>
                                <h2 class="card-title pricing-card-title">
                                    @if (@item.Count == 0)
                                    {<h2>Нет в наличии</h2>}
                                    else
                                    {
                                        <h2>Количество: @item.Count</h2>
                                    }
                                </h2>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>@item.Description</li>
                                </ul>
                                <button type="button" class="btn btn-lg btn-block btn-outline-primary">Купить</button>
                            </div>
                            <br />
                            <br />
                        </div>
                    }
                </div>
            </td>
            <td>
                @foreach (var item in ViewBag.Prod2)
                {
                    <div class="card mb-4 shadow-sm" style="width: 18rem;">
                        <img src="@item.http" class="card-img-top" alt="..." style="width: 18rem;">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">@item.Name</h4>
                        </div>
                        <div class="card-body">
                            <h2 class="card-title pricing-card-title">
                                $@item.Cost
                            </h2>
                            <h2 class="card-title pricing-card-title">
                                @if (@item.Count == 0)
                                {<h2>Нет в наличии</h2>}
                                else
                                {
                                    <h2>Количество: @item.Count</h2>
                                }
                            </h2>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>@item.Description</li>
                            </ul>
                            <button type="button" class="btn btn-lg btn-block btn-outline-primary">Купить</button>
                        </div>
                        <br />
                        <br />
                    </div>
                }
            </td>
            <td>
                @foreach (var item in ViewBag.Prod3)
                {
                    <div class="card mb-4 shadow-sm" style="width: 18rem;">
                        <img src="@item.http" class="card-img-top" alt="..." style="width: 18rem;">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">@item.Name</h4>
                        </div>
                        <div class="card-body">
                            <h2 class="card-title pricing-card-title">
                                $@item.Cost
                            </h2>
                            <h2 class="card-title pricing-card-title">
                                @if (@item.Count == 0)
                                {<h2>Нет в наличии</h2>}
                                else
                                {
                                    <h2>Количество: @item.Count</h2>
                                }
                            </h2>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>@item.Description</li>
                            </ul>
                            <button type="button" class="btn btn-lg btn-block btn-outline-primary">Купить</button>
                        </div>
                        <br />
                        <br />
                    </div>
                }
            </td>
        </tr>
    </table>

</body>
</html>
